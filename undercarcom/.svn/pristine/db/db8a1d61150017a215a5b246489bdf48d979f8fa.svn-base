<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>
<body>
<div class="container">
  <h2>메시지 작성</h2>
  <form action="write.do" method="post">
    <div class="form-group">
      <label for="title">제목:</label>
      <input type="text" class="form-control" id="title" placeholder="Enter title" name="title">
    </div>
    <div class="form-group">
      <label for="accepter">받은 사람:</label>
      <input type="text" class="form-control" id="accepter" placeholder="Enter accepter" name="accepter">
    </div>
    <div class="form-group">
      <label for="content">내용:</label>
      <textarea rows="10" cols="50" class="form-control" id="content" name="content" placeholder="Enter content"></textarea>
    </div>
    <button type="submit" class="btn btn-default">보내기</button>
  </form>
</div>

</body>
</html>